<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="172dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="34dp"
        android:background="@color/blank"
        app:layout_constraintBottom_toTopOf="@+id/takeImageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableTop="@drawable/gallery_symbol_120x120"
        android:contentDescription="@string/buttontext_take_with_camera"/>

    <Button
        android:id="@+id/takeImageButton"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="256dp"
        android:background="@color/blank"
        android:contentDescription="@string/buttontext_select_from_gallery"
        android:drawableTop="@drawable/camera_symbol_120x120"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectImageButton" />
</android.support.constraint.ConstraintLayout>